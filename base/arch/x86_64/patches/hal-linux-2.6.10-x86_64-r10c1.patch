+static inline void __adeos_switch_to (adomain_t *out, adomain_t *in, int cpuid) {
+    __asm__ __volatile__( \
+    	"cli\n" \
+	"pushfq\n" \
+	"pushq %%rdi\n" \
+	"pushq %%rsi\n" \
+	"pushq %%rdx\n" \
+	"pushq %%rcx\n" \
+	"pushq %%rax\n" \
+	"pushq %%r8\n" \
+	"pushq %%r9\n" \
+	"pushq %%r10\n" \
+	"pushq %%r11\n" \
+	"pushq %%rbx\n" \
+	"pushq %%rbp\n" \
+	"pushq %%r12\n" \
+	"pushq %%r13\n" \
+	"pushq %%r14\n" \
+	"pushq %%r15\n" \
+	"pushq %%gs\n" \
+	"pushq %[out]\n" \
+	"pushq $1f\n" \
+	"movq %%rsp, 8(%[out])\n" \
+	"movq 8(%[in]), %%rsp\n" \
+	"movq %[in], %[adp_cur]\n" \
+	"ret\n" \
+	  /* Call domain switch hook (if any) */
+"1:      popq %%rax\n" \
+	"movq (%%rax),%%rax\n" \
+	"testq %%rax,%%rax\n" \
+	"je 2f\n" \
+	"call *%%rax\n" \
+	  /* Domain resume point */
+"2:     popq %%gs\n" \
+	"popq %%r15\n" \
+	"popq %%r14\n" \
+	"popq %%r13\n" \
+	"popq %%r12\n" \
+	"popq %%rbp\n" \
+	"popq %%rbx\n" \
+	"popq %%r11\n" \
+	"popq %%r10\n" \
+	"popq %%r9\n" \
+	"popq %%r8\n" \
+	"popq %%rax\n" \
+	"popq %%rcx\n" \
+	"popq %%rdx\n" \
+	"popq %%rsi\n" \
+	"popq %%rdi\n" \
+	"popfq\n" \
+	"sti\n" \
+	: \
+	: [out] "S" (out), [in] "D" (in),
