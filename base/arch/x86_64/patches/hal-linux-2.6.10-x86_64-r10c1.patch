+    if (irq >= IPIPE_NR_IRQS ||
+	(adeos_virtual_irq_p(irq) &&
+	 !test_bit(irq - IPIPE_VIRQ_BASE,&__adeos_virtual_irq_map)))
+	return -EINVAL;
+
+    adeos_hw_local_irq_save(flags);
+
+    regs.orig_rax = irq; /* Won't be acked */
+    regs.cs = __KERNEL_CS;
+    regs.eflags = flags;
+
+    __adeos_handle_irq(&regs);
