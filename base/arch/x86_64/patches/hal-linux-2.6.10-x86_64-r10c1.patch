+
+	if (!(regs->eflags & 0x200)) {
+		__set_bit(IPIPE_STALL_FLAG,&adp_root->cpudata[cpuid].status);
+		regs->eflags |= 0x200;
+	} else {
+		__clear_bit(IPIPE_STALL_FLAG,&adp_root->cpudata[cpuid].status);
