+	unsigned long s;
+
+	adeos_get_cpu(flags);
+
+	s = test_and_set_bit(IPIPE_STALL_FLAG,&adp_root->cpudata[cpuid].status);
+
+	if (adeos_pipeline_head_p(adp_root))
+	    adeos_hw_cli();
+	else
+	    adeos_put_cpu(flags);
+
