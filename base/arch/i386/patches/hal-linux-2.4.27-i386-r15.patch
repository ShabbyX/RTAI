+    unsigned long flags;
+
+    if (unlikely(!adp_pipelined))
+	return;
+
+    adeos_get_cpu(flags);
+
+    /* Have the domain stall bit look like the hw state on entry. */
+
+    if (!(regs.eflags & 0x200))
+	{
+	set_bit(IPIPE_STALL_FLAG,&adp_root->cpudata[cpuid].status);
+	regs.eflags |= 0x200;
+	}
